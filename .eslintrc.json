{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "@lights-on"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@lights-on/typescript-strict", "prettier"],
      "parserOptions": {
        "project": "./tsconfig.*?.json"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@lights-on/javascript-strict", "prettier"]
    }
  ]
}
